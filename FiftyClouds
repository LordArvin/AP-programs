
import java.awt.Graphics;
import java.awt.Graphics2D;
import java.awt.geom.Ellipse2D;

import javax.swing.JButton;
import javax.swing.JComponent;
import javax.swing.JPanel;

public class FiftyCoulds extends JComponent{
	
	public FiftyCoulds(JButton b, JPanel p){
		
		button = b;
		control = p;
		
	}
	
	public FiftyCoulds(int width, int height, double x1, double y1) {
		w = width;
		h = height;
		x = x1;
		y = y1;
	}

	public void paintComponent(Graphics g){
		Graphics2D g2 = (Graphics2D)g;
		
		makeClouds(w, h, x, y, g2);
		
	}
	public void makeClouds(int w, int h, double x, double y, Graphics2D g2){
		for(int i = 1; i < 50; i++){
			Ellipse2D.Double circ = new Ellipse2D.Double(w, h, x, y);
			g2.draw(circ);
			
		}
		
	}
	
	
	private JButton button;
	private JPanel control;
	private int w;
	private int h;
	private double x;
	private double y;
}
